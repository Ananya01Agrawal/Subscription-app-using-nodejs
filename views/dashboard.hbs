<!-- views/dashboard.hbs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <a href="/logout">Logout</a>
        <h1 class="mt-4 mb-4">Welcome, {{ user.username }}</h1>
        

        <!-- Subscription Management Section -->
        <div class="card mb-4">
            <div class="card-header">
                Subscription Management
            </div>
            <div class="card-body">
                <!-- Subscription Table -->
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Plan</th>
                            <th scope="col">Cost</th>
                            <th scope="col">Start Date</th>
                            <th scope="col">End Date</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each subscriptions}}
                        <tr>
                            <td>{{ this.plan }}</td>
                            <td>{{ this.cost }}</td>
                            <td>{{ this.startDate }}</td>
                            <td>{{ this.endDate }}</td>
                            <td>
                                <a href="/subscriptions/{{ this._id }}" class="btn btn-info btn-sm">View</a>
                                <a href="/subscriptions/{{ this._id }}/edit" class="btn btn-primary btn-sm">Edit</a>
                                <form action="/subscriptions/{{ this._id }}/delete" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

                <!-- Create New Subscription Button -->
                <a href="/subscriptions/new" class="btn btn-success">Create New Subscription</a>
            </div>
        </div>
    </div>

    <!-- JavaScript libraries -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
